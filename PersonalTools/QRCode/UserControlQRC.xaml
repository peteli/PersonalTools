<UserControl x:Class="peteli.PersonalTools.QR.UserControlQRC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:peteli.PersonalTools.QR"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="200">
    <StackPanel Margin="10">
        <TextBlock Text="Content of QR Code" />
        <TextBox x:Name="QRcontent" MaxLines="10" MinLines="5"/>
        <Separator />
        <Button x:Name="btnMakeQRCode" Content="Create QR Code" />
        <Separator/>
        <Image x:Name="ImageQRCode" MaxHeight="100" MinHeight="100" />

    </StackPanel>
</UserControl>
